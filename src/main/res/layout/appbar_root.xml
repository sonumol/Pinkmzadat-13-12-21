    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".views.root.RootActivity">

    <include layout="@layout/activity_root" />

    <fragment
        android:id="@+id/mainNavFragment"
        android:name="com.platinummzadat.qa.views.root.drawer.MainDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        tools:layout="@layout/fragment_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>